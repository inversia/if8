{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "~*": ["./src/*"],
            "Common": ["./src/Common"],
            "Common/*": ["./src/Common/*"]
        },
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "allowJs": false,
        "noImplicitAny": true,
        "typeRoots": [ "./src/@types", "./node_modules/@types"]
    },
    "include": ["src/**/*"],
    "exclude": ["./src/@types"]
}